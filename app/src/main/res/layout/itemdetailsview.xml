<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingTop="100dp"
        android:scaleType="centerCrop"
        android:layout_margin="8dp"
        android:src="@drawable/cakedarkforest"/>
    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLACK FOREST"
        android:textSize="24sp"
        android:textColor="#7e7d7d"
        android:layout_margin="8dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cake"
        android:layout_margin="8dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes (106)"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d7d5d5"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="#f17f06"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvItemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.45"
            android:textColor="#f17f06"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"/>
        <TextView
            android:id="@+id/tvStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock"
            android:textColor="#06caf1"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="125dp"/>
        <ImageView
            android:id="@+id/imgFvrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_heart"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="22sp"
        android:textColor="#7e7d7d"
        android:layout_margin="8dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic creamy black chocolate with vanilla frosting and strawberries. "
        android:layout_margin="8dp"
        android:textSize="20sp"/>
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7e7d7d">

    </view>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d7d5d5"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_margin="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deal"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular(+$0.00)"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="148dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <Button
        android:id="@+id/btnAddItemToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_margin="8dp"
        android:background="#f17f06"/>

</LinearLayout>

</ScrollView>